r2public:
    image: lukasplevac/r2cloud-public
    links:
     - mariadb:mysql
    ports:
     - "80:5000"
    volumes:
     - /path/to/setting.py:/r2cloud_public/setting.py
     
adminer:
    image: adminer
    links:
     - mariadb:mysql
    environment:
      ADMINER_DEFAULT_DB_DRIVER: mysql
      ADMINER_DEFAULT_DB_HOST: mysql
      ADMINER_DEFAULT_DB_NAME: r2public
      ADMINER_DESIGN: nette
      ADMINER_PLUGINS: tables-filter tinymce
    ports:
      - 8080:8080
      
mariadb:
    image: mariadb
    environment:
     - MYSQL_ROOT_PASSWORD=XXXXXX
     - MYSQL_DATABASE=r2public
    volumes:
     - ./database:/var/lib/mysql